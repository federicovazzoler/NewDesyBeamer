\ProvidesPackage{beamerfontthemedesynew}[2018/04/27]

\RequirePackage{helvet}
\renewcommand{\familydefault}{\sfdefault}
\RequirePackage{moresize}

\setbeamerfont{main title in title page}{size=\HUGE,series=\bfseries}
\setbeamerfont{subtitle in title page}{size=\small,series=\bfseries}
\setbeamerfont{more text in title page}{size=\footnotesize}

\setbeamerfont{frametitle}{size=\LARGE,series=\bfseries}
\setbeamerfont{framesubtitle}{size=\small,series=\bfseries}

\setbeamerfont{text in footline}{size=\tiny}
\setbeamerfont{page number in footline}{series=\bfseries}

\setbeamerfont{normal text}{size=\small}
\RequirePackage{etoolbox}
\preto\frametitle{\usebeamerfont{normal text}}

\setbeamerfont{block title}{size=\small,series=\bfseries}
\setbeamerfont{block body}{size=\small}
\setbeamerfont{block body alerted}{parent=block body}

\setbeamerfont{item}{size=\small}
\setbeamerfont{subitem}{size=\small}
\setbeamerfont{subsubitem}{size=\small}
\setbeamerfont{itemize/enumerate body}{size=\small}
\setbeamerfont{itemize/enumerate subbody}{size=\small}
\setbeamerfont{itemize/enumerate subsubbody}{size=\small}
